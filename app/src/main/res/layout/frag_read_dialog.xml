<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/read_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="date"
            app:layout_constraintEnd_toStartOf="@+id/read_weather"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/read_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="weather"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.diaremake.SquareImage
            android:id="@+id/read_img"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/intro_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/read_weather" />

        <TextView
            android:id="@+id/read_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="#33000000"
            android:padding="16dp"
            android:text="TextView"
            android:textColor="#ffffffff"
            app:layout_constraintBottom_toBottomOf="@+id/read_img"
            app:layout_constraintEnd_toEndOf="@+id/read_img"
            app:layout_constraintStart_toStartOf="@+id/read_img"
            app:layout_constraintTop_toTopOf="@+id/read_img" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>